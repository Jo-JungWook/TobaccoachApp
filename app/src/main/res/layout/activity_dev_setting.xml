<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_dev_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/text_dev_setting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="개발자 모드"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/edit_device_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Input Device Mac Address"
        android:text="A8:1B:6A:AE:6B:31"
        android:layout_centerInParent="true"
        />

    <EditText
        android:id="@+id/edit_ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_device_address"
        android:layout_centerHorizontal="true"
        android:hint="Input Server IP Address"
        android:text="192.168.219.106" />

    <Button
        android:id="@+id/submit_ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_below="@+id/edit_device_address"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서버의 IP주소와 디바이스의 Mac주소를 입력하세요"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@+id/text_dev_setting_title"
        />



</RelativeLayout>
